@model IEnumerable<TeamMember>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Team Members</h4>
            <a asp-action="Create">Create Member</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/assets/img/team/@item.Image" alt="Image">
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Position</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="TeamMember" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detail</a>
                                    <a asp-area="Admin" asp-controller="TeamMember" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                    <a asp-area="Admin" asp-controller="TeamMember" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

